def resolve_folder_by_path(account, subfolder_name: str):
    """
    只從 Inbox (收件匣) 底下取子資料夾。
    不分大小寫比對，避免中文/英文介面差異。
    """
    # 先嘗試直接取：account.inbox / 'Radware'
    try:
        return account.inbox / subfolder_name
    except Exception:
        # 若名稱大小寫或語系不同，做一層不分大小寫比對
        target = subfolder_name.lower()
        for f in account.inbox.children.all():
            try:
                if f.name and f.name.lower() == target:
                    return f
            except AttributeError:
                # 防止遇到非 Folder 物件（例如 MeetingRequest）
                continue
        raise ValueError(f"Inbox 下找不到子資料夾：{subfolder_name}")